<%layout("/layouts/boilerplate")-%>

<style>
  #filters {
    display: flex;
    gap: 2px;
    margin-top: 2rem;
    align-items: center;
  }
  .filter {
    width: 6vw;
    height: 10vh;
    text-align: center;
    opacity: 0.7;
    padding: 0.5rem 1rem;
    /* border: 1px solid lightgray; */
    border-radius: 10px;
  }
  .filter:hover {
    cursor: pointer;
    opacity: 1;
    border: 1px solid lightgray;
  }
  #tax-info{
    display: inline;
  }
  .tax-toggle{
    border: solid lightgray 1px;
    width: 16rem;
    height: 3rem;
    border-radius: 2rem;

  }
  
</style>
<body>
  <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain-city"></i>
      <p> City</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>castles</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Beach</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-campground"></i>
      <p>Cabins</p>
    </div>
     <div class="filter">
      <i class="fa-solid fa-ship"></i>
      <p>ship</p>
    </div>
     <div class="filter">
      <i class="fa-solid fa-monument"></i>
      <p>Monument</p>
    </div>

    <div class="filter">
      <i class="fa-brands fa-galactic-republic reverse"></i>
      <p>Arctic</p>
    </div>
    <div id="taggle-box" class="tax-toggle d-flex justify-content-center align-items-center">
  <div class="form-check form-switch">
    <input
      class="form-check-input"
      type="checkbox"
      role="switch"
      id="switchCheckDefault"
    />
    <label class="form-check-label" for="switchCheckDefault">
      display total with tax
    </label>
  </div>
</div>

  </div>

  

  <div class=" ">
    <!--  <h2>All listing are</h2> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
      <% for( let value of allListing ) { %>
      <a class="listing-link" href="/listing/<%=value._id%>">
        <div class="card">
          <img
            src="<%=value.image.url%>"
            class="card-img-top"
            style="height: 18rem"
            alt="listing_image"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b> <%= value.title %> </b><br />
              &#8377;<%= value.price.toLocaleString("en-IN") %>/night
              <i id="tax-info"> &nbsp;&nbsp;+18 GST</i>
            </p>
          </div>
        </div></a
      >
      <% } %>
    </div>
  </div>
  <script>
    const taxSwitch = document.getElementById('switchCheckDefault');
    taxSwitch.addEventListener('click', function() {
      const taxInfoElements = document.querySelectorAll('#tax-info');
      taxInfoElements.forEach(element => {
        if (taxSwitch.checked) {
          element.style.display = 'none';
        } else {
          element.style.display = 'inline';
        }
      });
    });

  </script>
</body>
