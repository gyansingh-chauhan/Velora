<%layout("/layouts/boilerplate")-%>

<body>
   <div class="container">
      <div class="row">
         <div class="col-7 offset-2">
         <h3>Listing Details </h3>
         <div class="card" style="width: fit-content;" >
            <img src="<%=showListing.image.url%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
               <p class="card-text">
               <b><%=showListing.title%></b><br>
               <%=showListing.description%><br>
               &#8377;<%=showListing.price.toLocaleString("en-IN")%><br>
               <%=showListing.location%><br>
               <%=showListing.country%><br>
               </p>
               <div class="link-div ">
         <div class="m-1">
         <a class="btn btn-primary" href="/listing/<%=showListing._id%>/edit">&nbsp;Edit &nbsp;</a> 
         </div>
         <div class="m-1">
         <form method="post" action="/listing/<%=showListing._id%>?_method=delete">
         <button class="btn btn-primary" type="submit">Delete</button>
         </form>
         </div>
         </div>
            </div>
         </div>
         </div>
      </div>
      <div  class="row">
         <div class="col-7 offset-2">
         
         </div>

     </div>
    
     
     </div>
    
</body>
